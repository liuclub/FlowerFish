<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_ham_bread_up"
        android:layout_width="@dimen/size_200"
        android:layout_height="@dimen/size_90"
        android:src="@mipmap/eva_ham_bread_up" />

    <LinearLayout
        android:layout_width="@dimen/size_200"
        android:layout_height="@dimen/size_210"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="@dimen/size_5"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_100"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_ham_fruit1"
                android:layout_width="@dimen/size_100"
                android:layout_height="@dimen/size_100"
                android:src="@mipmap/eva_tomato_small" />

            <ImageView
                android:id="@+id/iv_ham_fruit2"
                android:layout_width="@dimen/size_100"
                android:layout_height="@dimen/size_100"
                android:src="@mipmap/eva_cucumber_small" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_100"
            android:layout_marginTop="@dimen/size_5"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_ham_fruit3"
                android:layout_width="@dimen/size_100"
                android:layout_height="@dimen/size_100"
                android:src="@mipmap/eva_cabbage_small" />

            <ImageView
                android:id="@+id/iv_ham_fruit4"
                android:layout_width="@dimen/size_100"
                android:layout_height="@dimen/size_100"
                android:src="@mipmap/eva_carrot_small" />

        </LinearLayout>


    </LinearLayout>

    <ImageView

        android:id="@+id/iv_ham_bread_dowm"
        android:layout_width="@dimen/size_200"
        android:layout_height="@dimen/size_55"
        android:src="@mipmap/eva_ham_bread_down" />
</LinearLayout>

