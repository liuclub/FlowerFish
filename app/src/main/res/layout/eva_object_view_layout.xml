<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/eva_object_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/bg"
            android:layout_width="@dimen/size_456"
            android:layout_height="@dimen/size_400"
            android:layout_centerInParent="true"
            android:src="@mipmap/rect_bg" />

        <TextView
            android:id="@+id/tv_eva_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/bg"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/size_35"
            android:text="西红柿"
            android:textColor="#C00000"
            android:textSize="@dimen/size_50" />

        <ImageView
            android:id="@+id/iv_eva_object"
            android:layout_width="@dimen/size_260"
            android:layout_height="@dimen/size_260"
            android:layout_centerHorizontal="true"
            android:layout_alignTop="@id/tv_eva_text"
            android:layout_marginTop="@dimen/size_65"
            android:src="@mipmap/eva_tomato" />
    </RelativeLayout>

</FrameLayout>
